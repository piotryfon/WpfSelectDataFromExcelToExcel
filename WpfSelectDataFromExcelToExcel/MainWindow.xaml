<Window x:Class="WpfSelectDataFromExcelToExcel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSelectDataFromExcelToExcel"
        mc:Ignorable="d"
        Title="Transform Excel" Height="450" Width="600">
    <StackPanel x:Name="LabelResult">

        <Button Content="Start"  Height="70" Margin="0,10,0,0" VerticalAlignment="Top" Width="160" FontSize="20" Click="Button_Click" 
                Background="Purple" Foreground="White" FontWeight="Bold"/>
        
        <Label Content="Result:" HorizontalAlignment="Left" Height="38" Margin="56,5,0,0" VerticalAlignment="Top" Width="61" 
               FontSize="16" RenderTransformOrigin="0.447,-0.842"/>
        
        <Label 
            x:Name="ActionResultLabel" Content="" HorizontalAlignment="Left" Height="72" Margin="56,5,0,0" Width="523"
            RenderTransformOrigin="0.5,0.5" FontSize="10"/>

    </StackPanel>
</Window>
